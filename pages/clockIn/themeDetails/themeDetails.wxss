/* pages/clockIn/themeDetails/themeDetails.wxss */

.banner {
  width: 100%;
  margin: 0;
  font-size: 0;
  display: block;
}

.info {
  width: 100%;
  background: #fff;
  padding: 40rpx 30rpx;
  box-sizing: border-box;
}

.title {
  font-size: 30rpx;
  color: #000;
  font-weight: bold;
}

.num {
  display: flex;
  justify-content: space-between;
  font-size: 26rpx;
  color: #939393;
}

.article {
  color: #2e2e2e;
  font-size: 30rpx;
  word-wrap: break-word;
  word-break: break-all;
}

.raking-me {
  padding: 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 26rpx;
  background: #fff;
  margin-top: 20rpx;
  border-bottom: 1px solid #efefef;
  border-top: 1px solid #efefef;
}
.no_ranking {
  padding: 30rpx;
  font-size: 30rpx;
  text-align: center;
  color: #000;
}
.no_ranking view{
  display: flex;
  justify-content: center;
  width: 100%;
  margin-bottom: 47rpx;
  box-sizing: border-box;
}
.no_ranking view image {
  width: 192rpx;
  height: 215rpx;
}
.raking-me-left {
  border-left: 2px solid #7c9acf;
  padding-left: 14rpx;
}

.footer {
  width: 100%;
  background: #fff;
  box-sizing: border-box;
  padding: 20rpx 30rpx;
  display: flex;
  justify-content: space-between;
}

.footer-btn {
  height: 86rpx;
  width: 40%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  font-size: 30rpx;
  border-radius: 86rpx;
  border: none;
}

.footer-btn::after {
  border: none;
}

.footer-share {
  background: #dc654f;
}

.footer-clockIn {
  background: #7c9acf;
}

.margin-t-30 {
  margin-top: 30rpx;
}

.video {
  width: 100%;
  height: 300rpx;
}

.image-box {
  /* display: flex; */
  box-sizing: border-box;
}

.image {
  /* width: 150rpx;
  height: 150rpx;
  margin-right: 20rpx; */
  width: 60%;
  margin: 20rpx auto 0;
  display: block;
}

.music {
  display: block;
}

.gray {
  background: #808080;
}
